{
  "name": "vue3-template",
  "version": "1.0.0",
  "description": "Vue3 & Tailwindcss@3 Template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite build && vite preview",
    "preview:dist": "vite preview",
    "lint": "eslint . --fix --cache",
    "format": "prettier --write --experimental-cli src/",
    "prepare": "simple-git-hooks",
    "ver": "node build/scripts/update-internal-version.js",
    "postbuild": "node build/scripts/generate-release.js"
  },
  "dependencies": {
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "~10.7.0",
    "globals": "^17.0.0",
    "less": "^4.5.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "3.8.1",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-vue-devtools": "^8.0.5"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "lint-staged": {
    "*.{vue,js}": [
      "eslint . --fix --cache",
      "prettier --write --experimental-cli src/"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
